<Window x:Class="ScanDownloaderV2.EditDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanDownloaderV2"
        mc:Ignorable="d"
        Title="Edit" Height="822.4" Width="476">
    <Grid>
        <Image x:Name="imgCover" HorizontalAlignment="Left" Height="101" Margin="10,10,0,0" VerticalAlignment="Top" Width="89"/>
        <TextBlock x:Name="nameDL" Margin="104,10,9.6,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="DetailsDL" Margin="104,31,9.6,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <ListBox x:Name="listChaptersDL" Margin="10,116,9.6,33.4" SelectionMode="Extended"/>
        <Button x:Name="ButtonDelete" Content="Delete" HorizontalAlignment="Right" Margin="0,0,89.6,9.4" Width="75" Height="19" VerticalAlignment="Bottom" Click="ButtonDelete_Click"/>
        <Button x:Name="ButtonClose" Content="Close" Margin="0,0,9.6,9.4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonClose_Click"/>

    </Grid>
</Window>
